<% layout('layouts/boilerplate') %>
<div class="row mt-3">
  <div class="col-8 offset-3"> 
<body>

    <h3><%= listing.title %></h3>
  </div>
    <div class="card col-6 offset-3 show-card listing-card">
        <img src="https://images.unsplash.com/photo-1501785888041-af3ef285b470?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTh8fHRyYXZlbHxlbnwwfHwwfHx8MA%3D%3D&auto=format&fit=crop&w=800&q=60" class="card-img-top show-img" alt="listing image ">
        <div class="card-body">
          <p class="card-text">
            <% if (listing) { %>
              
              <%= listing.description %> <br>
              &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> <br>
              <%= listing.location %> <br>
              <%= listing.country %> <br>
            <% } else { %>
              <p>Listing not found.</p>
            <% } %>

          </p>
        </div>
      </div>
    
</body>

</div>  
<div class="btns">
  <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit </a>
  
  <form  method="post" action="/listings/<%=listing._id%>?_method=Delete">
    <button class="btn btn-dark offset-5 delete-btn">Delete</button>
</form>
</div>
<div class="col-8 offset-3 mb-3">
  <hr>
  <h4>Leave a review</h4>
  <form action="/listings/<%= listing._id%>/reviews" method="post" novalidate class="needs-validation">
    <div class="mt-3 mb-3">
      <label for="rating" class="form-label">Rating</label>
      <input type="range" min="0" max="5" id="rating" name="review[rating]" class="form-range"  >
    </div>
    <div class="mt-3 mb-3">
      <label for="comment" class="form-label">Comments</label>
      <textarea name="review[comment]" id="comment" cols="30" rows="5"  class="form-control" required></textarea>
      <div class="invalid-feedback">Please Submit Some comments for Review !</div>
    </div class="mt-3 mb-3">
    <button class="btn btn-outline-dark">Submit</button>
  </form>
  <hr>
  <p><b>All Reviews</b></p>
<div class="row">
<% for(review of listing.reviews){ %>
    
  <div class="card col-5 ms-3 mb-3">

    <div class="card-body">
      <h5 class="card-title">Jane Dom</h5>
      <p class="card-text"><%= review.comment %></p>
      <p class="card-text"><%= review.rating %> stars</p>
      <form  class="mb-3" method="post" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
        <button class="btn btn-sm btn-dark">Delete </button>
      </form>
    </div>
    
  </div>
<% } %>
</div>
</div>

<br>
<br>



