<% layout('layouts/boilerplate') %>

<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br>
            <h3>Create a New Listing</h3>

            <form method="POST" action="/listings" novalidate class="needs-validation" id="listingForm">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" id="title" placeholder="Add a catchy title" class="form-control" required>
                    <div class="invalid-feedback">Title is required.</div>
                </div>

                <div>
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" id="description" class="form-control" required></textarea>
                    <div class="invalid-feedback">Description is required.</div>
                </div>
                
                <div class="mb-3">
                    <label for="image" class="form-label">Image Link</label>
                    <input type="text" name="listing[image]" id="image" placeholder="Enter image URL" class="form-control" required>
                    <div class="invalid-feedback">Image URL is required.</div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input  name="listing[price]" id="price" placeholder="1000" class="form-control" min="1" required>
                        <div class="invalid-feedback">Price must be a positive number.</div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="listing[country]" id="country" placeholder="India" class="form-control" required>
                        <div class="invalid-feedback">Country is required.</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" id="location" placeholder="Andhra Pradesh" class="form-control" required>
                    <div class="invalid-feedback">Location is required.</div>
                </div>

                <br /><br />
                <button class="btn addbtn" type="submit">Add</button>
                <br><br>
            </form>
        </div>
    </div>

</body>
